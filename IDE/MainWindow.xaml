<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="19">
            </ColumnDefinition>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Grid.ColumnSpan="3">
           <MenuItem Header="File" Height="25">
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Open" ></MenuItem>
                <MenuItem Header="Close" ></MenuItem>
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
           <MenuItem Header="Debug" Height="25">
                <MenuItem Header="temp"></MenuItem>
                <MenuItem Header="temp" ></MenuItem>
            </MenuItem>
           <MenuItem Header="Window" Height="25">
                <MenuItem Header="temp"></MenuItem>
                <MenuItem Header="temp" ></MenuItem>
            </MenuItem>
           <MenuItem Header="Help">
                <MenuItem Header="temp"></MenuItem>
                <MenuItem Header="temp" ></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
